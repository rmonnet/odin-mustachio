{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "presentation": {
        "reveal": "silent",
        "panel": "shared",
    },
    "problemMatcher": {
        "owner": "odin",
        "source": "Odin",
        "fileLocation": "absolute",
        "pattern": {
          "regexp": "^(.*?)(\\((\\d+):(\\d+)\\))\\s+(Syntax\\s+)?(Error|Warning):\\s+(.+)$",
          "file": 1,
          "line": 3,
          "column": 4,
          "severity": 6,
          "message": 7
        }
    },
    "tasks": [
        {
            "label": "Create build directory - Debug",
            "type": "shell",
            "linux": {
                "command": "mkdir -p ${fileDirname}/out/debug"
            },
            "osx": {
                "command": "mkdir -p ${fileDirname}/out/debug"
            },
            "windows": {
                "command": "cmd",
                "args": ["/C", "if not exist ${fileDirname}\\out\\debug mkdir ${fileDirname}\\out\\debug"]
            },
        },
        {
            "label": "Create build directory - Release",
            "type": "shell",
            "linux": {
                "command": "mkdir -p ${fileDirname}/out/release"
            },
            "osx": {
                "command": "mkdir -p ${fileDirname}/out/release"
            },
            "windows": {
                "command": "cmd",
                "args": ["/C", "if not exist ${fileDirname}\\out\\release mkdir ${fileDirname}\\out\\release"]
            }
        },
        {
            "label": "Build - Debug",
            "group": "build",
            "dependsOn": "Create build directory - Debug",
            "type": "process",
            "command": "odin",
            "args": [
                "build",
                "${fileDirname}",
                "-debug",
                "-o:none",
                "-vet",
                "-strict-style",
                "-show-timings"
            ],
            "options": {
                "cwd": "${fileDirname}/out/debug"
            }
        },
        {
            "label": "Build - Release",
            "group": "build",
            "dependsOn": "Create build directory - Release",
            "type": "process",
            "command": "odin",
            "args": [
                "build",
                "${fileDirname}",
                "-vet",
                "-strict-style",
                "-show-timings"
            ],
            "options": {
                "cwd": "${fileDirname}/out/release"
            }
        },
        {
            "label": "Check",
            "group": "build",
            "type": "process",
            "command": "odin",
            "args": [
                "check",
                "${fileDirname}",
                "-vet",
                "-strict-style"
            ]
        },
        {
            "label": "Clean",
            "group": "build",
            "type": "shell",
            "linux":{
                "command": "rm",
                "args": [
                    "-rf",
                    "${fileDirname}/out",
                ]
            },
            "osx":{
                "command": "rm",
                "args": [
                    "-rf",
                    "${fileDirname}/out",
                ]
            },
            "windows": {
                "command": "Remove-item",
                "args": [
                    "${fileDirname}\\out",
                    "-recurse",
                ]
            }
        },
        {
            "label": "Profile Memory",
            "group": "test",
            "type": "process",
            "dependsOn": "Build - Debug",
            "command": "MTuner.exe",
            "args": [
                "${fileDirname}/out/debug/${fileDirnameBasename}.exe"
            ]
        },
    ]
}
